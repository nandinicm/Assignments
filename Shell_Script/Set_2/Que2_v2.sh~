#!/bin/bash
if [ $# -eq 0 ]
  then
    echo "No directory specified. Now using current directory as default"
else
    cd "$1"
fi
myDir=`pwd` 
CurDir=`pwd | grep -o '[^/]*$'`
ls -1rRS
for file in *
do
    actualsize=$(du -k "$file" | cut -f 1)
    if [ $actualsize -eq 0 ]
	then
	  rm -i $file
    fi
done
